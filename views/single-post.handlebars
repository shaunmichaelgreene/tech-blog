{{> post-info post}}
{{!-- if user is not logged in, hide comment-form --}}
{{#if post.comments}}
{{> comments post.comments}}
{{else}}
<div>No Comments Yet!</div>
{{/if}}
{{#if loggedIn}}
<div class="comment-form-heading">Get In on the Discussion!</div>
<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">Add Comment</button>
  </div>
</form>
{{else}}
  <a href="/login">You must be a registered user to post comments, click here to resister or log in!</a>
{{/if}}


{{#if loggedIn}}
<script src="/javascript/create-comment.js"></script>
{{/if}}