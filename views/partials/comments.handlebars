<div class="comments-heading">Comments:</div>
<div class="comments">
  {{#each this}}
  <section class="comment">
    <div class="meta">
      -{{user.username}} on {{format_date created_at}} ({{escaped}}{{format_timeElapsed created_at}} ago){{escaped}}
    </div>
    <div class="text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>